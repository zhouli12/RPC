<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 配置服务注册组件 -->
    <bean id="serviceRegistry" class="com.server.ServiceRegistry">
        <constructor-arg name="registryAddress" value="127.0.0.0:2181"/>
    </bean>

    <!-- 配置 RPC 服务器 -->
    <bean id="rpcServer" class="com.server.RpcServer">
        <constructor-arg name="serverAddress" value="127.0.0.1:8000}"/>
        <constructor-arg name="serviceRegistry" ref="serviceRegistry"/>
    </bean>
    <!-- 客户端 -->
    <bean id="serviceDiscovery" class="com.xxx.rpc.registry.ServiceDiscovery">
        <constructor-arg name="registryAddress" value="${registry.address}"/>
    </bean>

    <!-- 配置 RPC 代理 -->
    <bean id="rpcProxy" class="com.xxx.rpc.client.RpcProxy">
        <constructor-arg name="serviceDiscovery" ref="serviceDiscovery"/>
    </bean>
    
</beans>
